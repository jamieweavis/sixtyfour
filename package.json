{
  "name": "sixtyfour",
  "description": "Base64 encode/decode menubar application",
  "version": "1.0.0",
  "author": "Jamie Weavis <jamie.weavis@gmail.com>",
  "bugs": {
    "url": "https://github.com/jamieweavis/sixtyfour/issues"
  },
  "build": {
    "appId": "com.jamieweavis.sixtyfour",
    "mac": {
      "darkModeSupport": true
    }
  },
  "dependencies": {
    "menubar": "^6.0.5"
  },
  "devDependencies": {
    "electron": "5.0.8",
    "electron-builder": "21.1.1",
    "eslint": "6.1.0",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-import": "2.18.2",
    "husky": "3.0.1",
    "lint-staged": "9.2.1",
    "prettier": "1.18.2"
  },
  "homepage": "https://github.com/jamieweavis/sixtyfour#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "base64",
    "base64-decoding",
    "base64-encoding",
    "electron",
    "electron-app",
    "menubar",
    "menubar-app"
  ],
  "license": "ISC",
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "main": "src/app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamieweavis/sixtyfour.git"
  },
  "scripts": {
    "dist": "electron-builder -m -l -w",
    "format": "prettier --write 'src/**/*.{js,html}'",
    "lint": "eslint src",
    "pack": "electron-builder --dir",
    "start": "electron src/app.js"
  }
}
